<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF" packages="com.bennavetta.uti.tycho.cli.logging">
	<appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss} [%-5level] [%logger{36}] %msg%n"/>
			<filters>
				<SystemPropertyFilter property="tycho.gen.logging.level" onMatch="ACCEPT" onMismatch="DENY"/>
			</filters>
		</Console>
	</appenders>
	<loggers>
		<root level="all">
			<appender-ref ref="console"/>
		</root>
	</loggers>
</configuration>